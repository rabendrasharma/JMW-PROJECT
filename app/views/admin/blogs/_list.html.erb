<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Image</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.title,  admin_blog_path(blog) %></td>
          <td><%= blog.content.html_safe %></td>
          <td><%= image_tag blog.image.url  width:'60%' unless blog.image.blank? %></td>
          <td>
          </td>
          <td class="text-right">
              <%#= link_to 'Edit', edit_admin_blog_path(blog), class: 'btn btn-xs btn-primary colorbox' %>
              <%#= link_to 'Delete', admin_blog_path(blog), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this blog?' } %>
            </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3" class="text-center">0 results found.</td>
      </tr>
  </tbody>
</table>
